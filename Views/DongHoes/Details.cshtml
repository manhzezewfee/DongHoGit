@model ngay8thang3_Complete.Models.DongHo

@{
    ViewBag.Title = Model.TenDongHo;
}

<body>

    <section class="py-3 bg-light">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="~/DongHoes/Index">Trang chủ</a></li>
                <li class="breadcrumb-item"><a href="#">Danh Mục</a></li>
                <li class="breadcrumb-item active" aria-current="page">Items</li>
            </ol>
        </div>
    </section>

    <!-- ========================= SECTION CONTENT ========================= -->
    <section class="section-content bg-white padding-y">
        <div class="container">

            <!-- ============================ ITEM DETAIL ======================== -->
            <div class="row">
                <aside class="col-md-6">
                    <div class="card">
                        <article class="gallery-wrap">
                            <div class="img-wrap">
                                @if (Model.KhuyenMai != 0)
                                {
                                    <span class="badge badge-danger" style="margin:10px; float:right">- @Model.KhuyenMai %</span>
                                }

                                <img src="~/@Model.HinhAnhDH" width="400">
                            </div> <!-- img-wrap.// -->
                           
                        </article> <!-- gallery-wrap .end// -->
                    </div> <!-- card.// -->
                </aside>
                <main class="col-md-6">
                    <article class="product-info-aside">

                        <h2 class="title mt-3">@Model.TenDongHo </h2>

                        <div class="rating-wrap my-3">
                            <ul class="rating-stars">
                                <li style="width:80%" class="stars-active">
                                    <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </li>
                                <li>
                                    <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </li>
                            </ul>
                            <small class="label-rating text-muted">132 reviews</small>
                            <small class="label-rating text-success"> <i class="fa fa-clipboard-check"></i> 154 orders </small>
                        </div> <!-- rating-wrap.// -->

                        <div class="mb-3">
                            <var class="price h4">
                                @if (Model.KhuyenMai != 0)
                                {
                                    <del style="font-size:15px">@(string.Format("{0:N0}",Model.DonGia))</del>
                                    <span style="font-size:23px">@(string.Format("{0:N0}",(double)(Model.DonGia-(Model.DonGia*Model.KhuyenMai/100))))</span>

                                }
                                else
                                {
                                    <span style="font-size:23px">@(string.Format("{0:N0}",(Model.DonGia)))</span>
                                }


                            </var>
                            <span class="text-muted">VND @(string.Format("{0:N0}",50000)). VAT</span>
                        </div> <!-- price-detail-wrap .// -->

                        <p>
                            @Model.MoTaNgan
                        </p>


                        <dl class="row">
                            <dt class="col-sm-3">Thương hiệu</dt>
                            <dd class="col-sm-9"><a href="#">@Model.ThuongHieu.TenThuongHieu</a></dd>

                            <dt class="col-sm-3">Bảo hành</dt>
                            <dd class="col-sm-9">2 year</dd>

                            <dt class="col-sm-3">Thời gian vận chuyển</dt>
                            <dd class="col-sm-9">3-4 ngày</dd>

                            <dt class="col-sm-3">Loại đồng hồ</dt>
                            <dd class="col-sm-9">@Model.LoaiDH.TenLoai</dd>
                            <dt class="col-sm-3">Số lượng</dt>
                            <dd class="col-sm-9">@Model.SoLuong</dd>

                        </dl>

                        <div class="form-row  mt-4">
                            <div class="form-group col-md flex-grow-0">
                                <div class="input-group mb-3 input-spinner">
                                   
                                    <input type="text" class="form-control" value="1">
                                    
                                </div>
                            </div> <!-- col.// -->
                            <div class="form-group col-md">
                                <a href=@Url.Action("ThemVaoGio","ShoppingCard",new {maSP = Model.ID}) class="btn  btn-primary">
                                    <i class="fas fa-shopping-cart"></i> <span class="text">Thêm vào giỏ hàng</span>
                                </a>

                            </div> <!-- col.// -->
                        </div> <!-- row.// -->

                    </article> <!-- product-info-aside .// -->
                </main> <!-- col.// -->
            </div> <!-- row.// -->
            <!-- ================ ITEM DETAIL END .// ================= -->


        </div> <!-- container .//  -->
    </section>
    <!-- ========================= SECTION CONTENT END// ========================= -->
    <!-- ========================= SECTION  ========================= -->
    <section class="section-name padding-y bg">
        <div class="container">

            <div class="row">
                <div class="col-md-8">
                    <h5 class="title-description">Mô tả</h5>
                    <p>
                        @Model.MoTaNgan
                    </p>
                    <ul class="list-check">
                        <li>Hàng chính hãng</li>
                        <li>Bảo hành tốt</li>
                        <li>Vận chuyển nhanh</li>
                        <li>Lựa chọn tốt nhất cho khách hàng</li>
                        <li>Nâng niu cánh tay Việt</li>
                    </ul>

                    @Html.Raw(Model.Đaciem)
                </div> <!-- col.// -->

                <aside class="col-md-4">

                    <div class="box">

                        <h5 class="title-description">Xem thêm</h5>
                        @*<p>
                                Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
                                tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
                                quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo
                                consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse
                                cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non
                                proident, sunt in culpa qui officia deserunt mollit anim id est laborum.
                            </p>

                            <h5 class="title-description">Videos</h5>*@


                        <article class="media mb-3">
                            <div class="col-md d-none d-lg-block flex-grow-1">
                                <aside class="special-home-right">
                                    <h6 class="bg-blue text-center text-white mb-0 p-2">Sản phẩm phổ biến</h6>
                                    @{Html.RenderAction("BuyMost1", "KhachHangs");}
                                </aside>
                            </div>
                        </article>
                    </div> <!-- row.// -->

            </div> <!-- container .//  -->
    </section>
    <!-- ========================= SECTION CONTENT END// ========================= -->
