                    @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.HinhAnhDH, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <img id="output" class="img-rounded" alt="ảnh" width="180" height="200" src="" />
                    <p><label for="ufile" style="cursor: pointer;">Chọn file ảnh</label></p>
                    <input type="file" name="ImageFile" id="ufile" style="display:none;" onchange="loadFile(event)" />
