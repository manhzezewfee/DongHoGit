@model ngay8thang3_Complete.Models.DongHo

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div style="margin:50px; width:800px">


    <h2>Thêm mới sản phẩm</h2>

